


{% if meta_info.image %}
  <meta property="og:image" content="{{meta_info.image.src}}"/>
  <meta property="og:image:type" content="{{meta_info.image.mime}}"/>
  <meta property="og:image:width" content="{{meta_info.image.width}}"/>
  <meta property="og:image:height" content="{{meta_info.image.height}}"/>
{% endif %}


{% if meta_info.type == 'business.business' %}
  <meta property="business:contact_data:street_address" content="{{options.street_address}}"/>
  <meta property="business:contact_data:locality" content="{{options.locality}}"/>
  <meta property="business:contact_data:region" content="{{options.region}}"/>
  <meta property="business:contact_data:postal_code" content="{{options.postal_code}}"/>
  <meta property="business:contact_data:country_name" content="{{options.country}}"/>
{% endif %}
